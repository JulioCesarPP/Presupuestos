<script>

    $('#btnCrear').click(function () {
        var nombre = $('#txtNombre').val();
        crearTipoCuenta(nombre);
    });

    function crearTipoCuenta(nombre) {
        $.ajax({
            type: "POST",
            url: '/TiposCuentas/Create',
            data: { Nombre: nombre },
            success: function () {
                location.reload();
            },
            error: function () {
                alert('Error al crear el tipo de cuenta.');
            }
        });
    }

